@model IEnumerable<WebHarcamaTakip.Models.Expense>
@{
    ViewData["Title"] = "Harcamalar";
}
<h2>Harcamalar & Gelirler</h2>
<a href="/Expenses/Create">Yeni Kayıt Ekle</a>
<p>
    <b>Bakiye:</b> @ViewBag.Total TL
</p>
<table border="1" cellpadding="6">
    <tr>
        <th>Tarih</th>
        <th>Açıklama</th>
        <th>Kategori</th>
        <th>Tür</th>
        <th>Tutar</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Date.ToShortDateString()</td>
            <td>@item.Description</td>
            <td>@item.Category</td>
            <td>@(item.IsIncome ? "Gelir" : "Gider")</td>
            <td>@item.Amount</td>
            <td><a href="/Expenses/Delete/@item.Id">Sil</a></td>
        </tr>
    }
</table>
